				{
					"name": "Login User",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"pm.environment.set('jwt', pm.response.json().jwt)\r",
									"\r",
									"let csrfFromHeader = pm.response.headers.get('X-CSRF-Token');\r",
									"if (csrfFromHeader) {\r",
									"    pm.environment.set('csrfToken', csrfFromHeader);\r",
									"} else {\r",
									"    let cookies = pm.cookies.toObject();\r",
									"    if (cookies.csrfToken) {\r",
									"        pm.environment.set('csrfToken', cookies.csrfToken);\r",
									"    }\r",
									"}"
