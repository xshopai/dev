# =============================================================================
# xshopai - Local Development Environment Variables
# =============================================================================
# Copy this file to .env and customize as needed
# Most values have sensible defaults for local development

# ============================================================================
# Infrastructure Services
# ============================================================================

# RabbitMQ
RABBITMQ_HOST=localhost
RABBITMQ_PORT=5672
RABBITMQ_MANAGEMENT_PORT=15672
RABBITMQ_USER=admin
RABBITMQ_PASSWORD=admin123

# Zipkin (Distributed Tracing)
ZIPKIN_URL=http://localhost:9411

# Mailpit (Email Testing)
MAILPIT_SMTP_HOST=localhost
MAILPIT_SMTP_PORT=1025
MAILPIT_WEB_UI=http://localhost:8025

# Redis (Cache & Session Store - used by Cart Service)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=redis_dev_pass_123

# ============================================================================
# Database Connection Strings
# ============================================================================

# MongoDB Instances
USER_MONGODB_URL=mongodb://admin:admin123@localhost:27018/user_service_db?authSource=admin
PRODUCT_MONGODB_URL=mongodb://admin:admin123@localhost:27019/product_service_db?authSource=admin
REVIEW_MONGODB_URL=mongodb://admin:admin123@localhost:27020/review_service_db?authSource=admin
# Note: Auth service uses user-service database (no separate auth DB)

# PostgreSQL Instances
AUDIT_POSTGRES_URL=postgresql://admin:admin123@localhost:5434/audit_service_db
ORDER_PROCESSOR_POSTGRES_URL=postgresql://postgres:postgres@localhost:5435/order_processor_db

# SQL Server Instances
ORDER_SQLSERVER_URL=Server=localhost,1434;Database=OrderServiceDB;User Id=sa;Password=Admin123!;TrustServerCertificate=True
PAYMENT_SQLSERVER_URL=Server=localhost,1433;Database=PaymentServiceDB;User Id=sa;Password=Admin123!;TrustServerCertificate=True

# MySQL Instance
INVENTORY_MYSQL_URL=mysql://admin:admin123@localhost:3306/inventory_service_db

# ============================================================================
# Service Ports (for documentation)
# ============================================================================

# Backend Services
PRODUCT_SERVICE_PORT=8001
USER_SERVICE_PORT=8002
ADMIN_SERVICE_PORT=8003
AUTH_SERVICE_PORT=8004
INVENTORY_SERVICE_PORT=8005
ORDER_SERVICE_PORT=8006
ORDER_PROCESSOR_SERVICE_PORT=8007
CART_SERVICE_PORT=8008
PAYMENT_SERVICE_PORT=8009
REVIEW_SERVICE_PORT=8010
NOTIFICATION_SERVICE_PORT=8011
AUDIT_SERVICE_PORT=8012
CHAT_SERVICE_PORT=8013
WEB_BFF_PORT=8014

# Frontend Applications
CUSTOMER_UI_PORT=3000
ADMIN_UI_PORT=3001

# ============================================================================
# Development Settings
# ============================================================================

# Logging
LOG_LEVEL=debug

# CORS (for local development)
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# JWT (use same secret across all services for local dev)
JWT_SECRET=local-dev-secret-key-change-in-production
JWT_EXPIRATION=24h

# ============================================================================
# Optional: External Services
# ============================================================================

# Azure OpenAI (for chat-service)
# AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com
# AZURE_OPENAI_API_KEY=your-api-key
# AZURE_OPENAI_DEPLOYMENT=gpt-4o

# Azure Communication Services (for notification-service)
# AZURE_COMMUNICATION_CONNECTION_STRING=your-connection-string
